<div class="signup">

  <h1>Create a New Account</h1>

    <form action='<%= users_url %>' method="post">
      <%= auth_token %>

      <label for="username">
        <input type="text" id="username" name="user[username]" placeholder="Username">
      </label>

      <br />

      <label for="password">
        <input type="password" id="password" name="user[password]" placeholder="Password">
      </label>

      <br>

      <label for="confirmation">
        <input type="password" id="confirmation" name="user[confirmation]" placeholder="Confirm">
      </label>

      <br />

      <input type="submit" value="Sign Up!">
    </form>

</div>
